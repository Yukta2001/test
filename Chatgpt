DECLARE
  v_search_term VARCHAR2(100) := 'your_table_name';
  v_query CLOB;
BEGIN
  SELECT TO_LOB(query) INTO v_query
  FROM all_mviews
  WHERE LOWER(query) LIKE '%' || LOWER(v_search_term) || '%';

  -- Process v_query as needed
  -- For example, you can print or process further based on the matched mview_name
  
  DBMS_OUTPUT.PUT_LINE('Query found: ' || v_query);
END;
/
