DECLARE
    v_target_string VARCHAR2(100) := 'your_search_string'; -- String you want to match
    v_search_string VARCHAR2(100);
BEGIN
    -- Prepare the search string for the LIKE operator
    v_search_string := '%' || v_target_string || '%';

    FOR rec IN (SELECT viewname, query 
                FROM user_mviews 
                WHERE LOWER(query) LIKE LOWER(v_search_string)) LOOP
        DBMS_OUTPUT.PUT_LINE('String found in view: ' || rec.viewname);
    END LOOP;
END;
